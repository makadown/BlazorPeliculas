@page "/counter"

<h1 style="color: @appState.ColorMayito; font-size: @appState.SizeMayito">Counter</h1>

<div style="display:flex">
    <div style="width:150px;">
        <select @bind="@appState.ColorMayito" class="form-control" style="margin-top:15px">
            <option value="green">Verde</option>
            <option value="red">Rojo</option>
            <option value="blue">Azul</option>
            <option value="black">Negro</option>
        </select>
    </div>
    <div style="width:150px;">
        <select @bind="@appState.SizeMayito" class="form-control" style="margin-top:15px">
            <option value="20px">20px</option>
            <option value="30px">30px</option>
            <option value="40px">40px</option>
            <option value="50px">50px</option>
        </select>
    </div>
</div>

<p>Current count: @currentCount</p>
<p>Singleton count: @singleton.Valor</p>
<p>Transient count: @transient.Valor</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<button class="btn btn-primary" @onclick="IncrementCountJavascript">Click me (JS)</button>
